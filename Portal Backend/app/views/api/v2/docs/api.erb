<!DOCTYPE html>
<html>
  <head>
    <title>Swagger UI V2</title>
    <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico" />
    <link href="//fonts.googleapis.com/css?family=Droid+Sans:400,700" rel="stylesheet" type="text/css" />
    <link href="/swagger-ui/css/highlight.default.css" media="screen" rel="stylesheet" type="text/css" />
    <link href="/swagger-ui/css/screen.css" media="screen" rel="stylesheet" type="text/css"/>
    <script src="/swagger-ui/lib/shred.bundle.js" type="text/javascript"></script>
    <script src="/swagger-ui/lib/jquery-1.8.0.min.js" type="text/javascript"></script>
    <script src="/swagger-ui/lib/jquery.slideto.min.js" type="text/javascript"></script>
    <script src="/swagger-ui/lib/jquery.wiggle.min.js" type="text/javascript"></script>
    <script src="/swagger-ui/lib/jquery.ba-bbq.min.js" type="text/javascript"></script>
    <script src="/swagger-ui/lib/handlebars-1.0.0.js" type="text/javascript"></script>
    <script src="/swagger-ui/lib/underscore-min.js" type="text/javascript"></script>
    <script src="/swagger-ui/lib/backbone-min.js" type="text/javascript"></script>
    <script src="/swagger-ui/lib/swagger.js" type="text/javascript"></script>
    <script src="/swagger-ui/swagger-ui.js" type="text/javascript"></script>
    <script src="/swagger-ui/lib/highlight.7.3.pack.js" type="text/javascript"></script>
    <%= render("layouts/analytics") %>
    <script type="text/javascript">
      $(function () {
        window.swaggerUi = new SwaggerUi({
          url: '/api/v2/docs/api.json',
          dom_id: 'swagger-ui-container',
          supportedSubmitMethods: ['get', 'post', 'put', 'delete'],
          onComplete: function(swaggerApi, swaggerUi){
            if(console) {
              console.log('Loaded SwaggerUI')
            }
            $('pre code').each(function(i, e) {hljs.highlightBlock(e)});
          },
          onFailure: function(data) {
            if(console) {
              console.log('Unable to Load SwaggerUI');
              console.log(data);
            }
          },
          docExpansion: "none"
        });

        $('#input_apiKey').change(function() {
          window.authorizations.add('key', new ApiKeyAuthorization('Authorization', 'Bearer ' + $('#input_apiKey').val(), 'header'));
        });

        window.swaggerUi.load();

        $('#api_auth').submit(function (e) {
          e.preventDefault();
          $.ajax({
            type: 'POST',
            url: '/api/v2/authenticate',
            data: {
              email: $('#api_auth_email').val().trim().toLowerCase(),
              password: $('#api_auth_password').val()
            }
          }).done(function (result) {
            if(typeof result.auth_token != 'undefined') {
              window.authorizations.add('key', new ApiKeyAuthorization('Authorization', 'Bearer ' + result.auth_token, 'header'));
              $('#input_apiKey').val(result.auth_token);
              $('#api_auth, #api_selector').toggle();
            } else {
              alert(result.error);
            }
          });
        });
      });
    </script>
    <style>
      #api_auth {
        display: block;
        clear: none;
        float: right;
      }
      #api_auth_email, #api_auth_password {
        padding: 3px;
      }
      #api_auth_login {
        font-weight: bold;
        padding: 4px 10px;
        font-size: 0.9em;
        color: white;
        background-color: #547f00;
        -moz-border-radius: 4px;
        -webkit-border-radius: 4px;
        -o-border-radius: 4px;
        -ms-border-radius: 4px;
        -khtml-border-radius: 4px;
        border-radius: 4px;
        border: none;
      }
    </style>
  </head>
  <body>
    <div id='header'>
      <div class="swagger-ui-wrap">
        <a id="logo" href="http://swagger.io">InstantCard API</a>
        <form id="api_selector" style="display: none;">
          <div class="input"><input placeholder="http://instantcard.net/api" id="input_baseUrl" name="baseUrl" type="text"/></div>
          <div class="input"><input placeholder="api_key" id="input_apiKey" name="apiKey" type="text"/></div>
          <div class="input"><a id="explore" href="#">Explore</a></div>
        </form>
        <form id="api_auth">
          <input placeholder="Email" type="text" name="email" id="api_auth_email" />
          <input placeholder="Password" type="password" name="password" id="api_auth_password" />
          <input type="submit" value="Log in" id="api_auth_login" />
        </form>
      </div>
    </div>
    <div id="message-bar" class="swagger-ui-wrap">
      &nbsp;
    </div>
    <div id="swagger-ui-container" class="swagger-ui-wrap"></div>
  </body>
</html>
