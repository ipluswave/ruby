                fill: '#2a3035',
                stroke: '#697884',
                rx: 10,
                ry: 10,
                strokeWidth: 1,
                evented: false,
                selectable: false,
                name: 'slotPunch'}));

            newestObject(true).toObject = (function(toObject) {
                return function() {
                    return fabric.util.object.extend(toObject.call(this), {
